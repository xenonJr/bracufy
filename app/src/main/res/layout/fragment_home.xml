<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/scr_background"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/three_bar"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:background="@drawable/circle_alt"
            android:src="@drawable/three_line"
            android:layout_height="40dp">
        </ImageButton>

        <TextView
            android:foregroundGravity="center"
            android:textColor="@color/white"
            android:layout_marginLeft="60dp"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:text="Bracufy"
            android:fontFamily="@font/monument"
            android:textSize="24dp"
            android:gravity="center"
            android:layout_gravity="center">

        </TextView>

        <ImageButton
            android:id="@+id/setting"
            android:layout_marginLeft="60dp"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:background="@drawable/circle_alt"
            android:src="@drawable/settings"
            android:layout_height="40dp">
        </ImageButton>


    </LinearLayout>

    <ImageView
        android:layout_marginTop="30dp"
        android:src="@drawable/title_card"
        android:layout_width="match_parent"
        android:layout_height="150dp">
    </ImageView>

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <EditText
            android:textColor="@color/black"
            android:fontFamily="@font/poppinslight"
            android:hint="Search your course..."
            android:textColorHint="@color/black"
            android:textSize="15dp"
            android:background="@drawable/round_edittext"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:id="@+id/search_course">
        </EditText>

        <ImageButton
            android:background="@drawable/circle_button"
            android:src="@drawable/search"
            android:id="@+id/search_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp">

        </ImageButton>

    </LinearLayout>

    <TextView
        android:text="Featured Lectures"
        android:textSize="23dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppmid"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_width="370dp"
        android:layout_height="50dp">

    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginLeft="7dp"
                android:id="@+id/lecture_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>



    </ScrollView>








</LinearLayout>