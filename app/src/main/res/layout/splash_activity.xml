<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/scr_background"
    android:layout_height="match_parent"
    tools:context=".View.SplashActivity">


    <ImageView
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:src="@drawable/splash_back"
        android:id="@+id/splash_image"
        android:layout_margin="30dp"
        android:layout_gravity="center">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Hello Bracu Student ! "
        android:textColor="@color/white"
        android:fontFamily="@font/poppinslight"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></TextView>

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/splash_phone"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_phone_24"
            android:background="@drawable/round_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            >

        </ImageButton>

        <ImageButton
            android:id="@+id/splash_email"
            android:layout_gravity="center"
            android:src="@drawable/email_new"
            android:background="@drawable/round_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp">

        </ImageButton>
    </LinearLayout>

    <Button
        android:id="@+id/continue_guest"
        android:layout_width="230dp"
        android:layout_margin="10dp"
        android:background="@drawable/long_round_button"
        android:text="Continue As Guest"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_height="50dp">

    </Button>

</LinearLayout>